<section class="new-product-form container">
    <h2 class="active">
      Selling
    </h2>

    <form action="api/products/uploads" method="post" enctype="multipart/form-data">
      <div class="item-info">
        <label for="img">Select image</label>
        <input type="file" id="image" name="image" accept="image/*">
      </div>
      <br>
      <div class="item-info">
        <label for="product_name">Title</label>
        <input type="text" class="text" id="product_name" name="product_name" />
      </div>
      <div class="item-info">
        <label for="product-description">Description</label>
        <input type="text" class="text" id="product-description" name="description" />
      </div>
      <div class="item-info">
        <label for="product-price">Price</label>
        <input type="text" class="text" id="product-price" name="price" />
      </div>
      <div class="item-info">
        <label for="product-category">Category</label>
        <input type="text" class="text" id="product-category" name="category_id" />
      </div>
        <div class="item-info">
        <label for="product-stock">Stock</label>
        <input type="text" class="text" id="product-stock" name="stock" />
      </div>
      <input type="submit" value="Upload" class="button" />
    </form>
  </section>

